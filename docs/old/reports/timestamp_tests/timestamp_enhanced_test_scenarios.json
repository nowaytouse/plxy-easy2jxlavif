{
  "enhanced_scenarios": [
    {
      "name": "concurrent_processing_timestamp_test",
      "description": "测试并发处理时的时间戳保留功能",
      "mode": "auto+",
      "concurrent_workers": 5,
      "test_files": [
        "./test_media_copy/test_images/007bdd742a6d8b2722daffcee0ad95e9.jpg",
        "./test_media_copy/test_images/sample1.png",
        "./test_media_copy/test_images/sample2.gif",
        "./test_media_copy/test_videos/sample1.mp4",
        "./test_media_copy/test_videos/sample2.avi"
      ],
      "expected_results": {
        "timestamp_preservation": true,
        "concurrent_safety": true
      }
    },
    {
      "name": "large_file_timestamp_test",
      "description": "测试大文件处理时的时间戳保留功能",
      "mode": "quality",
      "file_size_threshold": "100MB",
      "test_files": [
        "./test_media_copy/large_files/large_video.mp4",
        "./test_media_copy/large_files/large_image.tiff"
      ],
      "expected_results": {
        "timestamp_preservation": true,
        "performance_acceptable": true
      }
    },
    {
      "name": "edge_case_timestamp_test",
      "description": "测试边缘情况下的时间戳保留功能",
      "mode": "emoji",
      "edge_cases": [
        "very_old_timestamp",
        "future_timestamp",
        "leap_year_timestamp",
        "timezone_edge_cases"
      ],
      "test_files": [
        "./test_media_copy/edge_cases/old_file.jpg",
        "./test_media_copy/edge_cases/future_file.png"
      ],
      "expected_results": {
        "timestamp_preservation": true,
        "edge_case_handling": true
      }
    },
    {
      "name": "metadata_integrity_timestamp_test",
      "description": "测试元数据完整性与时间戳保留的协同工作",
      "mode": "quality",
      "metadata_validation": true,
      "test_files": [
        "./test_media_copy/with_metadata/photo_with_exif.jpg",
        "./test_media_copy/with_metadata/video_with_metadata.mp4"
      ],
      "expected_results": {
        "timestamp_preservation": true,
        "metadata_integrity": true,
        "exif_preservation": true
      }
    },
    {
      "name": "atomic_operation_timestamp_test",
      "description": "测试原子操作中的时间戳保留功能",
      "mode": "auto+",
      "atomic_operations": true,
      "test_files": [
        "./test_media_copy/atomic_test/file1.jpg",
        "./test_media_copy/atomic_test/file2.png"
      ],
      "expected_results": {
        "timestamp_preservation": true,
        "atomic_safety": true,
        "rollback_capability": true
      }
    }
  ],
  "test_configuration": {
    "timestamp_tolerance_seconds": 1,
    "performance_timeout_seconds": 300,
    "cleanup_after_test": true,
    "detailed_logging": true,
    "report_format": "json"
  },
  "validation_criteria": {
    "timestamp_accuracy": "±1 second",
    "concurrent_safety": "no race conditions",
    "metadata_integrity": "all metadata preserved",
    "performance_threshold": "<5% overhead"
  }
}